@model VolvoTrucks.Models.Truck

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Truck</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TruckID" />
        <div class="form-group">
            <label asp-for="TruckID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TruckID)
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ManufacturingYear" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ManufacturingYear" class="form-control" readonly="readonly"/>
                <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModelYear" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ModelYear" class="form-control" asp-items="ViewBag.ModelYears">
                    <option value="">-- Select Truck Model Year --</option>
                </select>
                <span asp-validation-for="ModelYear" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TruckModel" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TruckModelID" class="form-control" asp-items="ViewBag.TruckModelID">
                    <option value="">-- Select TruckModel --</option>
                </select>
                <span asp-validation-for="TruckModelID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
